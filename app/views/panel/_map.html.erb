<div id="map" style="width: 775px; height: 575px;"></div>

<div class="modal fade" id="newProblemModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag "/problems", remote: true, authenticity_token: true, role: :form do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Você viu um novo problema na cidade?</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="problem_type_id">Qual tipo de problema?</label><br>
            <%= select_tag :problem_type_id, options_from_collection_for_select(ProblemType.all, "id", "name"), name: "problem[problem_type_id]", class: "form-control", include_blank: true %>
          </div>
          <div class="form-group">
            <label for="problem_date">Quando aconteceu?</label><br>
            <div class="input-group">
              <span class="input-group-addon">
                <label><input type="radio" name="autoset_problem_date" data-days="0"> Hoje</label>
                <label><input type="radio" name="autoset_problem_date" data-days="1"> Ontem</label>
                <label><input type="radio" name="autoset_problem_date" data-days="2"> 2 dias atrás</label>
              </span>
              <%= text_field_tag :problem_date, nil, name: "problem[problem_date]", class: "form-control", placeholder: "dd/mm/yyyy" %>
            </div>
          </div>
          <div class="form-group">
            <label for="info">Comente sobre o problema...</label>
            <%= text_area_tag :info, nil, name: "problem[info]", class: "form-control", rows: 3 %>
          </div>
          <div class="form-group">
            <label for="video_url">URL do vídeo sobre o problema</label><br>
            <%= text_field_tag :video_url, nil, name: "problem[video_url]", class: "form-control", autocomplete: "off" %>
          </div>
          <%= hidden_field_tag :latitude, nil, name: "problem[latitude]" %>
          <%= hidden_field_tag :longitude, nil, name: "problem[longitude]" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
          <button type="submit" class="btn btn-primary">Reportar agora!</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
